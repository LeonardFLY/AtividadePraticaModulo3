@model AtividadeModulo3.Models.Cliente

<h1>Create</h1>

<h4>Cliente</h4>
<hr />
<div class="row d-flex justify-content-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Primeira secção do formulário-->
            <div class="d-flex justify-content-between">
                <div class="form-group col-7">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="Cpf" class="control-label">CPF</label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="Nascimento" class="control-label"></label>
                <input asp-for="Nascimento" class="form-control" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            </div>
            <!--Segunda secção do formulário-->
            <div class="d-flex justify-content-between">
            <div class="form-group col-9">
                <label asp-for="Endereço" class="control-label"></label>
                <input asp-for="Endereço" class="form-control" />
                <span asp-validation-for="Endereço" class="text-danger"></span>
            </div>
            
                <div class="form-group col-2">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>

            </div>

            </div>
            <!--Terceira Secção do formulário-->
            <div class="d-flex justify-content-between">
            <div class="form-group col-5">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            
            <div class="form-group col-3">
                <label asp-for="Cep" class="control-label"></label>
                <input asp-for="Cep" class="form-control" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>

            <div class="form-group col-2">
                <label asp-for="Uf" class="control-label">UF</label>
                <input asp-for="Uf" class="form-control" />
                <span asp-validation-for="Uf" class="text-danger"></span>
            </div>

            </div>
            <!--Quarta secção do formulário-->
            <div class="d-flex justify-content-between">
            <div class="form-group col-5">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
           
            <div class="form-group col-5">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
          <div class="form-group"><br />
                <a asp-area="" asp-controller="Home" asp-action="Index"><input type="submit" value="Salvar" class="btn btn-primary" /></a>
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
